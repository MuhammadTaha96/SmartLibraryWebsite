@{
    SmartLibraryWeb.ViewModel.UserLoginViewModel user = Session["UserModel"] as SmartLibraryWeb.ViewModel.UserLoginViewModel;
    string username = user != null ? "Welcome, " + user.UserName : string.Empty;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Smart Library</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!--===============================================================================================-->
    <link href="~/Content/css/util.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />.
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/buttons/1.6.0/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/responsive/2.2.3/css/responsive.dataTables.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/custom.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.0/js/dataTables.buttons.min.js" type="text/javascript"></script>
    <link href="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js" rel="stylesheet" />
    <link href="http://cdn.datatables.net/plug-ins/1.10.20/dataRender/ellipsis.js" rel="stylesheet" />

    @RenderSection("scripts", required: false)

    <style>
        body {
            background-image: url(../../Content/images/bookwallpaper.jpg);
        }

        .dataTables_info, .dataTables_length, #BookListTable_previous, #BookListTable_next {
        color: white !important;
        }
        .table-pagination-div {
            background-color: #428bca !important;
        }
    </style>
</head>

<body>
    @Html.Hidden("LoginUser", null, new { userLoginId = user.UserLoginId.ToString() })
    <div id="loading" class="loadingDiv" style="display: none;">
        <img class="loading" alt="Processing ..." src="/Content/images/loading.gif">
    </div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Smart Library", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li>@Html.ActionLink("Books", "GetAllBooks", "Home")</li>
                </ul>
                @if (user != null)
                {
                    <div class="dropdown" style="float:right">
                        <button id="WelcomeDropdown" class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                            @username
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li> <a href="@Url.Action("SignOut", "Account")"> Sign out</a></li>
                            <li>@Html.ActionLink("Change Password", "ChangePassword", "Account")</li>
                        </ul>
                    </div>
                }
                else
                {
                    <div id="UserLoginDiv"> @Html.ActionLink("Sign in", "Login", "Account") </div>
                }
            </div>

        </div>

    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Smart Library</p>
        </footer>
    </div>

</body>
@Html.Hidden("CommentPartialView", Url.Action("CommentsPartialView", "Home"))
@Html.Hidden("ReviewPartialView", Url.Action("ReviewsPartialView", "Home"))
@Html.Hidden("AddCommentUrl", Url.Action("AddComment", "Home"))
@Html.Hidden("BookLocationPartialView", Url.Action("BookLocationPartialView", "Home"))
</html>

